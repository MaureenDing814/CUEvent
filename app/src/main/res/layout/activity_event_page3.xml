<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.cuevent.EventPage3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/poster2"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taste of China"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#174785"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: 12/23/2017         Time: 10 am-1 pm"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:textColor="#626262"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location:  Diana Event Oval, Engineering School, Columbia University"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:textColor="#626262"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Host: Chinese Students Club"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:textColor="#626262"/>

    <LinearLayout
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes: 39"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="#626262"/>


    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Introduction"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#75aadb"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#75aadb"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CSC's newest cultural event featuring China's regional cuisins, games, performances, and more!"
        android:layout_margin="10dp"
        android:textSize="11sp"
        android:textColor="#626262"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Host"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#75aadb"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#75aadb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/host3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Chinese Students Club (CSC) of Columbia University is a non-profit student-run organization that promotes social, cultural, and political activities both on and off campus. We host various events and activities, ranging from social mixers to political forums, throughout the school year."
            android:layout_margin="10dp"
            android:textSize="11sp"
            android:textColor="#626262"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#75aadb"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#75aadb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/profile3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wish more tickets can be released in the future!"
            android:layout_margin="10dp"
            android:textSize="11sp"
            android:textColor="#626262"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_gravity="center"
        android:onClick="success"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>