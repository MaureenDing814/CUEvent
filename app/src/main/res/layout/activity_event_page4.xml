<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.android.cuevent.EventPage4">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:src="@drawable/poster3"
    android:scaleType="centerCrop"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="What is a Literary Magazine?"
    android:layout_margin="10dp"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#174785"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Date: 12/12/2017         Time: 7 pm-9 pm"
    android:layout_marginLeft="10dp"
    android:textSize="13sp"
    android:textColor="#626262"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Location:  501 Dodge Hall, New York, NY 10027"
    android:layout_marginLeft="10dp"
    android:textSize="13sp"
    android:textColor="#626262"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Host: Columbia Journal"
    android:layout_marginLeft="10dp"
    android:textSize="13sp"
    android:textColor="#626262"/>

<LinearLayout
    android:layout_width="189dp"
    android:layout_height="29dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/like"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes: 53"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:textColor="#626262"/>


</LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Introduction"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#75aadb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#75aadb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A panel discussion hosted by Columbia Journal with a stellar roster of luminaries, upstarts and hot-shots from the literary magazine landscape. The conversation will cover the changing role of the literary magazine, the ins and outs of publishing, and joys of bringing new work into the world!"
            android:layout_margin="10dp"
            android:textSize="11sp"
            android:textColor="#626262"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Host"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#75aadb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#75aadb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/host4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Columbia: A Journal of Literature and Art is an annual publication that features the very best in poetry, fiction, nonfiction, and art. We were founded in 1977 and continue to be one of the few national literary journals entirely edited, designed, and produced by students. Visit our webpage (http://www.columbiajournal.org) or follow our online journal, Catch Release, for exciting new works of writing, film, visual arts, photography, criticism, and more: http://catchandrelease.columbiajournal.org/"
                android:layout_margin="10dp"
                android:textSize="11sp"
                android:textColor="#626262"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#75aadb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#75aadb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:layout_margin="10dp"
            android:textSize="11sp"
            android:textColor="#626262"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_gravity="center"
            android:onClick="success"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>